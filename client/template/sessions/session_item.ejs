<div class="session" ng-repeat="activeSession in activeSessions | orderBy:'session_name'">
  <ul>
    <li>
      <div class="session_info">
        <div class="session_name">
          {{activeSession.session_name}}
        </div>
<% if(user.enabled) { %>
        <div class="session_id">
          {{activeSession.session_id}}
        </div>
<% } %>
      </div>
      <div class="actions">
<% if(user.enabled) { %>
        <a href="" class="delete" ng-click="onDeleteSessionClicked(activeSession.session_name)"></a>
        <div class="confirm-delete" ng-show="isConfirmDeleteDialogOpen[activeSession.session_name]">
        <p>Sure?</p>
          <a href="" class="yes-btn" ng-click="deleteSession(activeSession.session_name)">Yes</a>
          <a href="" class="no-btn" ng-click="onDeleteSessionClicked(activeSession.session_name)">No</a>
        </div>
<% } %>
      </div>
    </li>
  </ul>
</div>