    <script type="text/javascript">var socketPort = <%- JSON.stringify(socketPort) %>;</script>
    <script type="text/javascript" src="../client/js/service/SocketService.js"></script>
    <script type="text/javascript" src="../client/js/service/DataManagerService.js"></script>
    <script type="text/javascript" src="../client/js/service/PlaybackService.js"></script>
    <script type="text/javascript" src="../client/js/service/VaultBehaviourService.js"></script>
    <script type="text/javascript" src="../client/js/controller/ApplicationCtrl.js"></script>
    <script type="text/javascript" src="../client/js/controller/TimelineCtrl.js"></script>
    <script type="text/javascript" src="../client/js/controller/VaultCtrl.js"></script>
    <script type="text/javascript" src="../client/js/controller/SessionCtrl.js"></script>
    <script type="text/javascript" src="../client/js/directive/filedialog.js"></script>
    <script type="text/javascript" src="../client/js/directive/tooltip.js"></script>
    <script type="text/javascript" src="../client/js/directive/clipcopy.js"></script>
    <script type="text/javascript" src="../client/js/controller/SearchCtrl.js"></script>
    <script type="text/javascript" src="../client/js/controller/HistoryCtrl.js"></script>
    <script type="text/javascript" src="../client/js/config/registry.js"></script>

    <title>Network Visualiser - Sessions View</title>

    <link rel="shortcut icon" href="../client/imgs/favicon.ico" />
    <link rel="icon" type="image/ico" href="../client/imgs/favicon.ico" />
  </head>
  <body ng-app="MaidSafe" ng-controller="sessionCtrl" id="sessions" ng-app="myapp">
    <header>
      <% include ../client/template/sessions/header.ejs %>
    </header>
    <section>
      <div class="wrapper active-list">
        <div class="list-header">
          <h2>Active Sessions</h2>
          <div class="session-count-label">{{activeSessions.length ? activeSessions.length : 0}}</div>
        </div>
        <div ng-repeat="session in activeSessions | orderBy:'session_name'">
          <% include ../client/template/sessions/session_item.ejs %>
        </div>
      </div>
      <div class="wrapper pending-list">
        <div class="list-header">
          <h2>Pending Sessions</h2>
          <div class="session-count-label">{{pendingSessions.length ? pendingSessions.length : 0}}</div>
        </div>
        <div ng-repeat="session in pendingSessions | orderBy:'session_name'">
          <% include ../client/template/sessions/session_item.ejs %>
        </div>
      </div>
    </section>
    <footer>
      <% include ../client/template/sessions/footer.ejs %>
    </footer>
    <script>
      $(function() {
      var container = $(".toggle_create_session");
      var container_import = $(".toggle_import_logs");

      $(container).hide();
      $(container_import).hide();

      function toggleSlide(buttonItem, parentItem, e) {
        e.preventDefault();

        if ($(buttonItem).hasClass('active')) {
          $(parentItem).hide();
          $(parentItem).slideDown("fast");
        }
      };

      $(".create-session").click(function(e) {
          toggleSlide(this, container, e);
        });

      $(".import-logs").click(function(e) {
          toggleSlide(this, container_import, e);
        });
      });
    </script>
  </body>
</html>